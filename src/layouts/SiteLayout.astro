---
export interface Props {
	title?: string;
}

const { title = 'Less yet greater' } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
</head>

<body class="bg-gray-50">
	<header class="bg-white border-b-2 border-gray-100 py-3 px-3 lg:px-6 mb-3">
		<h2 class="font-medium"><a href="/">Less yet greater</a></h2>
	</header>
	<slot />
</body>

</html>